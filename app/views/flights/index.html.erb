        <td><%= flight.string %></td>
        <td><%= flight.string %></td>
        <td><%= flight.integer %></td>
        <td><%= flight.integer %></td>
        <td><%= flight.float %></td>
        <td><%= flight.string %></td>
        <td><%= flight.string %></td>
        <td><%= link_to 'Show', flight %></td>
